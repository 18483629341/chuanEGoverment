.body0 {
  min-width: 1200px;
}
.header {
  height: 50px;
  background: url('../img/top_bg.png') repeat-x;
}
.header .headerMain {
  width: 1200px;
  margin: 0 auto;
  padding: 13px 0;
  height: 100%;
}
.header .HeaderLeftCon {
  width: 450px;
  height: 100%;
}
.header .HeaderRightCon {
  width: 267px;
  height: 100%;
}
.section {
  height: 1065px;
  background: url('../img/bg_02.png') no-repeat;
  background-size: 100% auto;
}
.section .headerSection,
.section .mainContent {
  width: 1200px;
  margin: 0 auto;
}
.section .headerSection {
  height: 146px;
  padding: 40px 0;
}
.section .mainContent {
  overflow: hidden;
  padding: 20px;
}
.section .topSection {
  height: 372px;
}
.section .centerSection {
  height: 320px;
  border: 1px solid yellow;
  margin-top: 8px;
}
.section .bottomSection {
  height: 117px;
  border: 1px solid yellow;
}
.section .leftRow {
  width: 760px;
  height: 100%;
}
.section .RightRow {
  width: 380px;
  height: 100%;
  border: 1px solid blue;
}
.footer {
  height: 60px;
  border: 1px solid blue;
}
